% title 'Play';
% layout 'default';
%
% my @content = $self->{MODEL}->resultset('Content')->search({ pages => {like => '%play%'} })->all;

<script type="text/javascript">//<![CDATA[

//]]></script>

<div class="content_left">

    <h1>Featured</h1>

    <% for (@content) { %>

        <% if (($_->tags =~ /featured/g ) and ($_->types =~ /event/g )) { %>

        <h3><a href="/more?id=<%= $_->id %>"><%= $_->title %></a></h3>

	<% for ( split /\s+/, $_->photos ) { %>
	
	<img src="<%= $_ %>" style="width:100px; height:auto;" />
	
	<% } %>

        <p><%= $_->body %></p>

        <% } %>
    <% } %>

    <h1>The Buzz</h1>

    <% for (@content) { %>

        <% if (($_->tags =~ /the_buzz/g ) and ($_->pages =~ /play/g )) { %>

        <h3><a href="/more?id=<%= $_->id %>"><%= $_->title %></a></h3>

	<% for ( split /\s+/, $_->photos ) { %>
	
	<img src="<%= $_ %>" style="width:100px; height:auto;" />
	
	<% } %>

        <p><%= $_->body %></p>

        <% } %>
    <% } %>

    <h1>Places</h1>

    <% for (@content) { %>

        <% if (($_->tags =~ /try_this/g ) and ($_->types =~ /place/g )) { %>

        <h3><a href="/more?id=<%= $_->id %>"><%= $_->title %></a></h3>

	<% for ( split /\s+/, $_->photos ) { %>
	
	<img src="<%= $_ %>" style="width:100px; height:auto;" />
	
	<% } %>

        <p><%= $_->body %></p>

        <% } %>
    <% } %>

</div>

<div class="content_right">

    <h1>Events</h1>

    <% for (@content) { %>

        <% if (($_->pages =~ /play/g ) and ($_->types =~ /event/g )) { %>

        <p><%= $_->title %></p>

        <% } %>
    <% } %>

</div>
