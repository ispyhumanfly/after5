    <body class="nihilo">

	<div id="content_loader">
	    <div id="content_loader_inner"></div>
	</div>

	<div id="main_container">
		
	    <div id="header_container" onClick="javascript:window.location='/';">
    
		<h2><%= title %></h2>
    
	    </div>
    
	    <div id="navigation_container">
    
		<ul>
		    <li><a href="/live">Live</a></li>
		    <li><a href="/work">Work</a></li>
		    <li><a href="/play">Play</a></li>
		    <li><a href="/photos">Photos</a></li>
		    <li><a href="/about">About</a></li>
    
		    <% if ( $self->session('admin') ) { %>
    
		    <li><a href="/dashboard">Dashboard</a></li>
		    
		    <% } %>
    
		</ul>

		<div dojoType="dijit.form.Form" class="search_form" encType="multipart/form-data" action="/search" method="get">
    
		    <input type="text" class="search_input_text" name="string" placeholder="Search After 5"></input>
    
		</div>
    
	    </div>
	    
	    <div id="content_container">
    		
		<div class="ad_space_header">

		<% if (exists $self->{ADS}) { %>

		    <script type="text/javascript">//<![CDATA[
		    
			var header_ads = new Array();
			
			<% for my $ad (@{$self->{ADS}}) { %>
	
			    <% for ( split /\s+/, $ad->photos ) { %>
	
			    header_ads.push("<a href='<%= $ad->link %>' onclick='ad_click(<%= $ad->id %>)' target='_blank'><img onload='Views.push(<%= $ad->id %>)' src='<%= $_ %>' style='width: 728px; height: 90px; text-decoration: none; border: 0px;' /></a>");
			    
			    <% last; # ONLY SHOW ONE %>
			    
			    <% } %>
	
			<% } %>
			
			var random = Math.floor(Math.random() * header_ads.length);
			document.write(header_ads[random]);
			
		    //]]></script>

		<% } %>

		</div>
	            
		%= content
    
	    </div>
    	    
	    <!-- This needs to be moved to the social_media module -->
	    
	    <div style="clear: right; float: right; margin-top: 20px; width: 30%; text-align: center; border-right: 25px solid white;">
    		
		<a style="position: relative; top: 15px;" href="https://twitter.com/after5detroit" class="twitter-follow-button" data-align="right" data-width="235px" data-show-count="true" data-lang="en">Follow @After5Detroit</a>
		<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

		<br />
		<br />
		
		<fb:like href="https://www.facebook.com/pages/After-5-Detroit/46857148306?ref=ts" send="true" width="200" show_faces="false" font="verdana"></fb:like>
		
	    </div>


	    <div id="footer_container">
    
